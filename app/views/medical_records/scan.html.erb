<div class="container mt-3">
  <h1>Medical History Form</h1>
  <div class="container mb-5 pb-5">
    <%= simple_form_for [@medical_record.patient, @medical_record] do |f| %>
      <%= f.association :condition %>
      <%= f.input :photo_form, as: :file %> <!-- You can style / change to camera later -->
      <%= f.submit 'Upload', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
