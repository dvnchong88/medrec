<div data-controller="drawer" data-drawer-target="drawer" class="item-drawer">
  <div class="item-drawer-content" type="chronic">
    <h3>Chronic Illnesses </h3>
    <h3><strong><%= medical_record.date %></strong></h3>
    <% if medical_record.symptoms? %>
      <li><%= medical_record.symptoms[0] %></li>
      <p><%#= medical_record.symptoms %></p>
    <% end %>
  </div>
  <div  data-action="click->drawer#open"  class="item-drawer-button">
    <i class="fas fa-ellipsis-v"></i>
  </div>
  <div class="item-drawer-settings">
    <a href="<%= patient_medical_record_path(medical_record.patient, medical_record) %>"><i class="fas fa-folder-open"></i></a>
    <a href="<%= edit_patient_medical_record_path(medical_record.patient, medical_record) %>"><i class="fas fa-pencil-alt"></i></a>
  </div>
</div>
