<div class="container mt-3 mb-5 pb-5">
  <% if current_user.doctor? %>
    <h1><%= image_tag (@patient.photo.attached? ? cl_image_path(@patient.photo.key) : "user.png"), class: "avatar" %><%= @patient.first_name%>'s Medical History</h1>
  <% else %>
    <h1>Medical History</h1>
  <% end %>
  <div data-controller="drawer" data-drawer-target="drawer" class="item-drawer">
    <div class="item-drawer-content" type="chronic">
      <h2>Chronic Illnesses</h2>
    </div>
    <div  data-action="click->drawer#open"  class="item-drawer-button" style="font-size:10px;">
      <i class="fas fa-ellipsis-v"></i>
    </div>
    <div class="item-drawer-settings">
      <a href="<%= chronic_illnesses_medical_records_path %>"><i class="fas fa-folder-open"></i></a>
      <%# <a href="<%= edit_patient_medical_record_path(@patient, medical_record) %>"><i class="fas fa-pencil-alt"></i></a> %>
  </div>
</div>
<%= link_to "New Medical Record", new_patient_medical_record_path(@patient), class:"btn btn-primary mt-3 mb-3" %>
<%= render @medical_records %>
</div>
