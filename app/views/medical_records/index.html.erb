<div class="container mt-3 mb-5 pb-5">
  <% if current_user.doctor? %>
    <h1><%= image_tag (@patient.photo.attached? ? cl_image_path(@patient.photo.key) : "user.png"), class: "avatar" %><%= @patient.first_name%>'s Medical History</h1>
  <% else %>
    <h1>Medical History</h1>
  <% end %>

  <br>
  <%= link_to general_conditions_path, style:"text-decoration:none;" do  %>
    <div class="item-drawer-condition">
      <%= "General" %>
    </div>
  <% end %>
  <% @conditions.each do |condition| %>
    <%= render "condition", condition: condition  %>
  <% end %>
</div>
<div class="container">
  <%= link_to "Create New Condition", new_condition_path, class:"btn btn-primary mt-3 mb-3", style:"position: absolute; left: 12px; bottom: 130px;" %>
</div>
