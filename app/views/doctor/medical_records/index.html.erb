<div class="container mb-5 pb-5">
  <h1>Medical Records by: Doctor <%= current_user.doctor.last_name %></h1>
  <% @medical_records.each do |medical_record| %>
    <div data-controller="drawer" data-drawer-target="drawer" class="item-drawer">
      <div class="item-drawer-content">
        <h3><strong><%= medical_record.patient.first_name %></strong></h3>
        <h3>Symptoms: </h3>
        <p><%= medical_record.symptoms %></p>
      </div>
      <div  data-action="click->drawer#open"  class="item-drawer-button">
        <i class="fas fa-ellipsis-v"></i>
      </div>
      <div class="item-drawer-settings">
        <%# <a href="<%= patient_medical_record_path(medical_record) %>"><i class="fas fa-folder-open"></i></a> %>
      <%# <a href="<%= edit_patient_medical_record_path(medical_record) %>"><i class="fas fa-pencil-alt"></i></a> %>
  </div>
</div>
<% end %>
</div>
