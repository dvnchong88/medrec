<div class="footer">
  <% if user_signed_in? %>
    <div class="container-fluid d-flex justify-content-around pt-2 ">
      <%= link_to dashboard_path do %>
        <i class="fas fa-home fa-2x icon-cog pt-2"></i>
      <% end %>
      <%= link_to root_path do %>
        <i class="fas fa-cog fa-2x icon-cog pt-2"></i>
      <% end %>
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        <i class="fas fa-qrcode fa-3x icon-cog"></i>
      </button>
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel"></h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="qr-code mt-3 d-flex justify-content-center">
                <%= current_user.patient.qr_code(patient_medical_records_url(self)).html_safe %>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
      <%= link_to root_path do %>
        <i class="fas fa-comment-dots fa-2x icon-cog pt-2"></i>
      <% end %>
      <%= link_to root_path do %>
        <i class="fas fa-chart-bar fa-2x icon-cog pt-2"></i>
      <% end %>
    </div>
  <% else %>
    <div class="container-fluid d-flex justify-content-around py-1 ">
    </div>
  <% end %>
</div>
