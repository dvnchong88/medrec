<div class="footer">
  <% if user_signed_in? %>
    <div class="container-fluid d-flex justify-content-around icon-container">
      <%= link_to dashboard_path do %>
        <i class="fas fa-home fa-2x icon-cog pt-2"></i>
      <% end %>
      <%= link_to root_path do %>
        <i class="fas fa-cog fa-2x icon-cog pt-2"></i>
      <% end %>
      <% if current_user.user_type == 'patient' %>
        <div class="w-10">
          <div class="circle">
            <button type="button" class="btn btn-flat" data-bs-toggle="modal" data-bs-target="#exampleModal">
              <i class="fas fa-qrcode fa-3x icon-cog"></i>
            </button>
          </div>
        </div>
      <% end %>
      <%= link_to root_path do %>
        <i class="fas fa-comment-dots fa-2x icon-cog pt-2"></i>
      <% end %>
      <%= link_to root_path do %>
        <i class="fas fa-chart-bar fa-2x icon-cog pt-2"></i>
      <% end %>
    </div>
  <% else %>
    <div class="container-fluid d-flex justify-content-around py-1 ">
    </div>
  <% end %>
</div>
